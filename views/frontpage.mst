<!doctype html>
<html>
    <head>
        <title>Blood Pressure Tracker</title>
        <meta charset="utf-8"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css">
    </head>
    <body>
        <h1>Blood Pressure Tracker</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Systolic</th>
                    <th>Diastolic</th>
                    <th>Pulse</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#results}}
                <tr>
                    <td>{{localizedCreatedAt}}</td>
                    <td>{{systolic}}</td>
                    <td>{{diastolic}}</td>
                    <td>{{pulse}}</td>
                    <td><a href="/delete/{{id}}">Delete</a></td>
                </tr>
                {{/results}}
            </tbody>
        </table>
    </body>
</html>
